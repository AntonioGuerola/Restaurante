<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.View.InsertProductoController">
    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" spacing="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label style="-fx-font-size: 16px;" text="Nombre" />
                        <TextField fx:id="nombreText" prefWidth="250.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label style="-fx-font-size: 16px;" text="Precio" />
                        <TextField fx:id="precioValue" prefWidth="250.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label style="-fx-font-size: 16px;" text="Opciones" />
                        <ChoiceBox fx:id="choiceBox" prefWidth="250.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="40.0">
                    <children>
                        <Button fx:id="guardarButton" onAction="#saveProducto" style="-fx-font-size: 14px; -fx-padding: 10px;" text="Guardar" />
                        <Button fx:id="volverButton" onAction="#goBack" style="-fx-font-size: 14px; -fx-padding: 10px;" text="Volver" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
